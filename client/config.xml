<?xml version='1.0' encoding='utf-8'?>
<widget id="restinga.ifrs.edu.br" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GAppE</name>
    <description>
        GAppE - Um Aplicativo para Gerenciamento e Acompanhamento de Eventos
    </description>
    <author email="eventoslaboratorio@gmail.com" href="http://cordova.io">
        GAppE
    </author>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <icon density="mdpi" height="57" platform="ios" src="./assets/Logo.PNG" target="logoIcon" width="57" />
    <preference name="StatusBarBackgroundColor" value="#2f9e41" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.4.3" />
</widget>
